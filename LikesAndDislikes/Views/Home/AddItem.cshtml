@model LikesAndDislikes.ViewModels.AddItemModel

@{
    ViewData["Title"] = "Lägg till";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <select asp-for="Action" class="form-control">
                    <option value="" selected disabled>Klicka här för att välja</option>
                    <option value="Gilla">Gilla</option>
                    <option value="Ogilla">Ogilla</option>
                </select>
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option" class="control-label"></label>
                <select asp-for="Option" class="form-control">
                    <option value="" selected disabled>Klicka här för att välja</option>
                    <option value="Land">Land</option>
                    <option value="Djur">Djur</option>
                    <option value="Förolämpning">Förolämpning</option>
                    <option value="Mat">Mat</option>
                    <option value="Årstid">Årstid</option>
                    <option value="Sport">Sport</option>
                    <option value="Citat">Citat</option>
                    <option value="Färg">Färg</option>
                    <option value="Aktivitet">Aktivitet</option>
                </select>
                <span asp-validation-for="Option" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Choice" class="control-label"></label>
                <input asp-for="Choice" class="form-control" />
                <span asp-validation-for="Choice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Fyll i ditt användarnamn" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Fyll i ditt lösenord" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skicka" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

